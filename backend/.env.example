# ===========================================
# KATHA - Smart Cultural Storyteller
# Environment Configuration
# ===========================================

# Database Configuration
DATABASE_URL=sqlite:///./katha.db
# For PostgreSQL: postgresql://user:password@localhost/dbname
# For MySQL: mysql://user:password@localhost/dbname

# ===========================================
# API Configuration
# ===========================================
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# ===========================================
# CORS Origins (comma-separated)
# ===========================================
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ===========================================
# JWT Authentication (IMPORTANT: Change in production!)
# ===========================================
JWT_SECRET_KEY=katha-secret-key-change-in-production-2024
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=10080

# ===========================================
# AI Service Configuration (Optional)
# ===========================================
# LLM API (if not provided, uses mocks)
LLM_API_KEY=
LLM_API_BASE_URL=

# Image API (uses Pollinations.ai by default - FREE, no key needed)
IMAGE_API_KEY=
IMAGE_API_BASE_URL=

# HuggingFace API Key (optional fallback for image generation)
HF_API_KEY=

# ===========================================
# Server Configuration
# ===========================================
HOST=127.0.0.1
PORT=8000